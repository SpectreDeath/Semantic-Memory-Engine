{
  "name": "Social Media Intelligence Crawler",
  "version": "1.0.0",
  "description": "Advanced social media monitoring and disinformation detection system",
  "author": "SME Team",
  "license": "MIT",
  "category": "Crawling & Intelligence",
  "tags": [
    "social-media",
    "disinformation",
    "sentiment-analysis",
    "bot-detection",
    "coordination-detection",
    "content-moderation"
  ],
  "dependencies": [
    "numpy>=1.21.0",
    "aiohttp>=3.8.0",
    "requests>=2.28.0"
  ],
  "compatibility": {
    "sme_version": ">=2.0.0",
    "python_version": ">=3.10"
  },
  "features": {
    "multi_platform_api": {
      "description": "Support for Twitter/X, Reddit, Facebook, YouTube, TikTok APIs",
      "enabled": true
    },
    "sentiment_analysis": {
      "description": "Multi-language sentiment analysis with bias detection",
      "enabled": true
    },
    "coordination_detection": {
      "description": "Advanced pattern recognition for coordinated campaigns",
      "enabled": true
    },
    "content_moderation": {
      "description": "NSFW, spam, and hate speech detection",
      "enabled": true
    },
    "real_time_monitoring": {
      "description": "Real-time content monitoring and alerting",
      "enabled": true
    },
    "geographic_analysis": {
      "description": "Geographic distribution and anomaly detection",
      "enabled": true
    }
  },
  "configuration": {
    "rate_limits": {
      "twitter": 300,
      "reddit": 60,
      "facebook": 200,
      "youtube": 10000,
      "tiktok": 1000
    },
    "moderation_thresholds": {
      "nsfw": 0.7,
      "spam": 0.6,
      "hate_speech": 0.5,
      "combined": 0.8
    },
    "coordination_thresholds": {
      "time_correlation": 0.7,
      "content_similarity": 0.6,
      "account_overlap": 0.3,
      "coordination_score": 0.7
    }
  },
  "api_endpoints": [
    {
      "name": "monitor_hashtag_campaign",
      "description": "Track hashtag usage patterns and bot activity",
      "parameters": {
        "hashtag": "string",
        "time_window": "number",
        "platforms": "array"
      }
    },
    {
      "name": "analyze_sentiment_spread",
      "description": "Analyze sentiment propagation across platforms",
      "parameters": {
        "topic": "string",
        "platforms": "array",
        "time_range": "number"
      }
    },
    {
      "name": "detect_coordinated_campaigns",
      "description": "Identify coordinated disinformation campaigns",
      "parameters": {
        "keywords": "array",
        "time_window": "number",
        "platforms": "array"
      }
    },
    {
      "name": "track_influencer_activity",
      "description": "Track activity and influence patterns of specific accounts",
      "parameters": {
        "influencer_handles": "array",
        "time_window": "number"
      }
    },
    {
      "name": "analyze_geolocation_patterns",
      "description": "Analyze geographic distribution and patterns",
      "parameters": {
        "topic": "string",
        "platforms": "array"
      }
    },
    {
      "name": "generate_social_media_report",
      "description": "Generate comprehensive social media intelligence reports",
      "parameters": {
        "report_type": "string",
        "parameters": "object"
      }
    }
  ],
  "data_privacy": {
    "data_retention": "30 days",
    "anonymization": true,
    "encryption": "AES-256",
    "compliance": ["GDPR", "CCPA"]
  },
  "monitoring": {
    "metrics": [
      "api_call_count",
      "error_rate",
      "response_time",
      "moderation_decisions",
      "coordination_detections"
    ],
    "alerts": [
      "high_coordination_score",
      "nsfw_content_detected",
      "spam_campaign_detected",
      "api_rate_limit_exceeded"
    ]
  }
}